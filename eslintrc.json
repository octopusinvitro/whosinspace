{
  "env": {
    "browser":  true,
    "node":     true,
    "amd":      true,
    "commonjs": true,
    "es6":      true,
    "jasmine":  true
  },
  "globals": {
    "Client": true,
    "Map": true,
    "UI": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}
